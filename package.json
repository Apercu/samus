{
  "name": "samus",
  "version": "1.1.1",
  "description": "mpv remote selector",
  "bin": {
    "samus": "./lib/index.js"
  },
  "scripts": {
    "start": "babel-node src",
    "clean": "rm -rf lib",
    "build": "npm run clean && babel src --out-dir lib",
    "lint": "eslint src test",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meriadec/samus.git"
  },
  "keywords": [
    "select",
    "remote"
  ],
  "author": "meriadec <meriadec.pillet@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/meriadec/samus/issues"
  },
  "homepage": "https://github.com/meriadec/samus#readme",
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "extends": [
      "zavatta"
    ],
    "rules": {
      "no-new": 0,
      "no-console": 0,
      "no-cond-assign": 0,
      "comma-dangle": 0
    },
    "globals": {
      "Promise": false
    }
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "superagent": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "babel-runtime": "^6.9.2",
    "babel-template": "^6.9.0",
    "eslint": "2.12.0",
    "eslint-config-zavatta": "^3.0.2"
  }
}
